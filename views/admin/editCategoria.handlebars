<div class="card">
    <h5 class="card-header">
        Edit category
    </h5>
    <div class="card-body">
        <form action="/admin/categoria/edit" method="post">
            <input type="hidden" name="id" id="" value="{{categoria._id}}">
            <label for="nome">Nome: </label>
            <input type="text" name="nome" id="nome" placeholder="your name" class="form-control" value="{{categoria.nome}}">
            <br>
            <label for="slug">Slug: </label> {{!-- expecie de url --}}
            <input type="text" name="slug" id="slug" placeholder="Slug the category" class="form-control" value="{{categoria.slug}}">
            <br>
            <button class="btn btn-dark" type="submit">Edit categoria</button>
        </form>

    </div>

</div>